{% block user_qr_code_widget %}
    <img src="{{ qr_code_path(value) }}" alt="" id="qr_code_img">
    <button class="btn btn-primary" onclick="
    var win = window.open('');
    win.document.write('<img src=' + document.getElementById('qr_code_img').src + ' onload=window.print();window.close() />');
    win.focus();
    "><i class="fa fa-print"></i> Print</button>
{% endblock %}